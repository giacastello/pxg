@ ./every core:custom {
  #%graph.x 0
  #%graph.y 0
  .code "

    @P(1)
    @Type.Integer(min = 0)
    @Port(false)
    int count;
    @P(2)
    @ReadOnly
    int position;

    @Out(1)
    Output out;

    @Override
    public void starting() \{
        position = 0;
    \}

    @In(1)
    void in(Argument value) \{
        position %= count;
        if (position == 0) \{
            out.send(value);
        \}
        position++;
        position %= count;
    \}

    @T(1)
    void reset() \{
        position = 0;
    \}

"
}

